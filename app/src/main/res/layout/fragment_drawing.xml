<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taras.homeworklesson11.DrawingFragment">

    <LinearLayout
        android:id="@+id/ll_FD"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ll_FD_height">

        <View
            android:id="@+id/v_black_FD"
            android:clickable="true"
            android:layout_marginLeft="@dimen/v_color_margin"
            android:layout_marginRight="@dimen/v_color_margin"
            android:layout_marginTop="@dimen/v_color_margin"
            android:layout_marginBottom="@dimen/v_color_margin"
            android:background="@color/colorBlack"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/v_blue_FD"
            android:clickable="true"
            android:layout_marginLeft="@dimen/v_color_margin"
            android:layout_marginRight="@dimen/v_color_margin"
            android:layout_marginTop="@dimen/v_color_margin"
            android:layout_marginBottom="@dimen/v_color_margin"
            android:background="@color/colorBlue"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/v_red_FD"
            android:clickable="true"
            android:layout_marginLeft="@dimen/v_color_margin"
            android:layout_marginRight="@dimen/v_color_margin"
            android:layout_marginTop="@dimen/v_color_margin"
            android:layout_marginBottom="@dimen/v_color_margin"
            android:background="@color/colorRed"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <com.example.taras.homeworklesson11.DrawingView
        android:id="@+id/dv_drawing_area"
        android:background="@drawable/drawing_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_FD" />

</RelativeLayout>
